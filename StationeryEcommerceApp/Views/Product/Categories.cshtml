@model List<string>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4 text-primary">Explore Our Categories</h2>

    @if (Model != null && Model.Count > 0) // Ensure model is not null and has values
    {
        <div class="row">
            @for (int i = 1; i < Model.Count; i++)
            {
                var category = Model[i]; // Fix for first card issue

                <div class="col-md-4 mb-4">
                    <div class="card h-100 category-card shadow-lg">
                        <div class="card-body text-center">
                            <div class="category-icon mb-3">
                                <i class="fas fa-tag fa-3x text-white"></i> <!-- Bootstrap Icon -->
                            </div>
                            <h5 class="card-title fw-bold text-light">@category</h5>
                            <a href="@Url.Action("ProductsByCategory", "Product", new { category = category })" class="btn btn-light fw-bold">
                                View Products
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted fs-5">No categories found.</p>
    }
</div>

<style>
    /* Category Card Styling */
    .category-card {
        background: linear-gradient(135deg, #007bff, #0056b3); /* Premium Blue Gradient */
        border-radius: 15px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        /* Hover Effect */
        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    /* Category Icon */
    .category-icon i {
        color: white;
    }

    /* Custom Button */
    .btn-light {
        border-radius: 8px;
        padding: 10px 20px;
        text-transform: uppercase;
        transition: background 0.3s ease;
    }

        .btn-light:hover {
            background: #f8f9fa;
            color: #007bff;
        }
</style>



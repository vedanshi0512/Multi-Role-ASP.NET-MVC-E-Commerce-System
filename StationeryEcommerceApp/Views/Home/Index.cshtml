@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section with Carousel -->
<div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://t3.ftcdn.net/jpg/02/82/46/00/360_F_282460098_Io0QSsOhjOMMDLA24Oy40xP05oEeo2gw.jpg" class="d-block w-100" alt="Stationery Sale">
            <div class="carousel-caption d-none d-md-block">
                <h2>Best Quality Stationery</h2>
                <p>All office & school supplies in one place.</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Shop Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://media.istockphoto.com/id/649195666/photo/office-supplies-still-life.jpg?s=612x612&w=0&k=20&c=npYjedECC8Lt-g31egnnl0yOhY7SIjfZIT9h2CdxQbE=" class="d-block w-100" alt="Office Supplies">
            <div class="carousel-caption d-none d-md-block">
                <h2>Exclusive Offers!</h2>
                <p>Flat 20% off on bulk purchases.</p>
                <a href="@Url.Action("Offers", "Product")" class="btn btn-warning">Check Offers</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://cdn.prod.website-files.com/62a6520d16a4c82ce7aba2af/631916bd184dc8dd4be81cdb_P-GettyImages-153676367.jpeg" alt="Writing Tools – Appointed" class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
                <h2>Premium Writing Tools</h2>
                <p>Shop the best pens, markers & more.</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-success">Explore</a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Offers Section -->
<section class="container mt-5">
    <h2 class="text-center">🔥 Limited Time Offers 🔥</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card">
                <img src="https://img.freepik.com/premium-vector/discount-special-offer-poster-banner-graphic-design-icon-logo-sign-symbol-social-media-website_1001514-48.jpg" alt="Premium Vector | Discount special offer poster banner graphic design icon  logo sign symbol social media website" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Back-to-School Pack</h5>
                    <p class="card-text">Get 15% off on school kits.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-danger">Grab Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.shutterstock.com/image-vector/banner-combo-deal-flat-style-600nw-2207625021.jpg" alt="552 Combo Deal Royalty-Free Photos and Stock Images | Shutterstock" class="card-img-top" >
                <div class="card-body">
                    <h5 class="card-title">Office Essentials</h5>
                    <p class="card-text">Buy 2 get 1 free on selected items.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://paperit.in/cdn/shop/products/IMG_0730.jpg?v=1671102586&amp;width=3333" alt="Bloom Notebook" class="card-img-top" >
                <div class="card-body">
                    <h5 class="card-title">Notebooks Bonanza</h5>
                    <p class="card-text">Flat 10% off on premium notebooks.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-warning">Check Out</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Customer Reviews -->
<section class="container mt-5">
    <h2 class="text-center">💬 What Our Customers Say</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="testimonial">
                <p>"Great collection and amazing discounts! Ordered a bulk package for my office and received everything on time!"</p>
                <h5>- Varsha</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial">
                <p>"Absolutely love their pen collection. The premium gel pens are a must-have for students!"</p>
                <h5>- Aryan</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial">
                <p>"Customer service is fantastic. I had an issue with my order, and they resolved it immediately!"</p>
                <h5>- Avya</h5>
            </div>
        </div>
    </div>
</section>

<!-- CSS Styling -->
<style>
    .carousel-item img {
        width: 100%;
        height: 500px; /* Set a fixed height */
        object-fit: cover; /* Ensures the image covers the container */
    }

    .carousel-caption {
        background: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
    }

    .card {
        margin-top: 20px;
        transition: 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .testimonial {
        background: #f8f9fa;
        padding: 15px;
        border-left: 5px solid #007bff;
        margin-top: 20px;
        border-radius: 5px;
    }
</style>

@model IEnumerable<StationeryEcommerceApp.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Users</h2>
<p>@Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-success" })</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = user.UserID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = user.UserID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = user.UserID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>



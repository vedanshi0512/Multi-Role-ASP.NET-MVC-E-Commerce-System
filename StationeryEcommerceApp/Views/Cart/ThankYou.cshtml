
@{
    ViewBag.Title = "ThankYou";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1>Thank You for Shopping!</h1>
    <p>Your order has been placed successfully.</p>

    @if (ViewBag.InvoicePath != null)
    {
        <a href="@Url.Content("~/Invoices/" + ViewBag.InvoicePath)" class="btn btn-primary">Download Invoice</a>
    }

    <br /><br />
    <a href="@Url.Action("Index", "Home")" class="btn btn-success">Return to Home</a>
</div>




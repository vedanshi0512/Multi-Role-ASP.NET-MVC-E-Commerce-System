@model StationeryEcommerceApp.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_MerchantLayout.cshtml";
}

<h2 class="text-center text-primary fw-bold">Edit Product</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ProductID)

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <!-- Product Name -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Name:</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Description:</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3, required = "required" })
                        </div>

                        <!-- Price -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Price:</label>
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                        </div>

                        <!-- Stock Quantity -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Stock Quantity:</label>
                            @Html.TextBoxFor(model => model.StockQuantity, new { @class = "form-control", type = "number", required = "required" })
                        </div>

                        <!-- Category -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Category:</label>
                            @Html.TextBoxFor(model => model.Category, new { @class = "form-control", required = "required" })
                        </div>

                        <!-- Product Image Upload -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">Product Image:</label>
                            <input type="file" name="ImageUrl" class="form-control" />

                            <!-- Show Existing Image -->
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-3 text-center">
                                    <p class="text-muted">Current Image:</p>
                                    <img src="data:image/png;base64,@Model.ImageUrl" class="img-fluid rounded shadow" style="max-width: 200px;" alt="Product Image">
                                </div>
                            }
                        </div>

                        <!-- Submit & Cancel Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success fw-bold">Save Changes</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary fw-bold" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

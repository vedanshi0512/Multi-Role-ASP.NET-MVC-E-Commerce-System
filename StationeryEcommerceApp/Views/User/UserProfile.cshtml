@model StationeryEcommerceApp.Models.User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="text-center">
                    <img src="https://www.w3schools.com/howto/img_avatar.png" alt="User Avatar" class="rounded-circle mb-3" width="120">
                    <h2>@Model.FirstName @Model.LastName</h2>
                    <p class="text-muted">Stationery Shopper</p>
                </div>

                <hr>

                <div class="profile-details">
                    <p><i class="fas fa-envelope text-primary"></i> <strong>Email:</strong> @Model.Email</p>
                    <p><i class="fas fa-phone text-success"></i> <strong>Phone:</strong> @Model.Phone</p>
                    <p><i class="fas fa-map-marker-alt text-danger"></i> <strong>Address:</strong> @Model.Address</p>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary">
                        <i class="fas fa-user-edit"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome Icons (Include in _Layout.cshtml if not already added) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    .card {
        border-radius: 15px;
        border: none;
    }

    .profile-details p {
        font-size: 16px;
        margin-bottom: 10px;
    }

    .btn {
        padding: 10px 20px;
    }
</style>

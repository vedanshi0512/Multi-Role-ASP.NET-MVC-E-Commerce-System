@model StationeryEcommerceApp.Models.User

@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="card login-card shadow-lg p-4">
        <h2 class="text-center text-primary">Welcome Back!</h2>
        <p class="text-center text-muted">Sign in to continue</p>
        <hr>

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="form-group mb-3">
                <label class="fw-bold">Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "Enter your email" })
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Password:</label>
                @Html.PasswordFor(m => m.password, new { @class = "form-control", required = "required", placeholder = "Enter your password" })
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Login</button>

            <!-- Register Link -->
            <p class="text-center mt-3">
                Don't have an account? @Html.ActionLink("Register Here", "Register", null, new { @class = "text-primary fw-bold" })
            </p>
        }

        <!-- Error Message -->
        @if (ViewBag.Message != null)
        {
            <p class="text-danger text-center mt-2">@ViewBag.Message</p>
        }
    </div>
</div>

<!-- Additional Styling -->
<style>
    /* Background Image */
    body {
        background: url(https://img.freepik.com/free-photo/colorful-stationeries-yellow-background_23-2147879933.jpg);
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-size: cover;
    }

    /* Login card styling */
    .login-container {
        width: 100%;
        max-width: 400px;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9); /* Slight transparency */
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        padding: 20px;
    }
    .main-content {
        flex: 1; /* Pushes the footer down */
    }
</style>

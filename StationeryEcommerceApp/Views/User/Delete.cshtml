
@model StationeryEcommerceApp.Models.User
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this user?</h2>

<p><strong>ID:</strong> @Model.UserID</p>
<p><strong>Name:</strong> @Model.FirstName</p>
<p><strong>Email:</strong> @Model.Email</p>

@using (Html.BeginForm("Delete", "User", FormMethod.Post))
{
    @Html.HiddenFor(m => m.UserID)
    <input type="submit" value="Delete" class="btn btn-danger" />
}

<p>@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })</p>
